@model SistemaControleVendas.Models.Produto

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastrar Produto</h1>

<h4></h4>
<hr />
<div class="container">
    <form asp-action="Create" class="row g-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-8">
            <label asp-for="Nome" class="form-label">Nome</label>
            <input asp-for="Nome" class="form-control" id="Nome">
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="DtCad" class="form-label">Data Cadastro</label>
            <input asp-for="DtCad" class="form-control" id="DtCad">
            <span asp-validation-for="DtCad" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="Tipo" class="form-label">Tipo</label>
            <input asp-for="Tipo" class="form-control" id="Tipo">
            <span asp-validation-for="Tipo" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="QuantEstoque" class="form-label">Quantidade Estoque</label>
            <input asp-for="QuantEstoque" class="form-control" id="QuantEstoque">
            <span asp-validation-for="QuantEstoque" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="Preco" class="form-label">Preço</label>
            <input asp-for="Preco" class="form-control" id="Preco">
            <span asp-validation-for="Preco" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Cadastrar" class="btn btn-primary"</
        </div>
    </form>
</div>
<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

