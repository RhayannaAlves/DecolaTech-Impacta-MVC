@model IEnumerable<SistemaControleVendas.Models.Produto>

@{
    ViewData["Title"] = "Index";
}

<h1>Produto</h1>

<p>
    <a asp-action="Create"> <button type="button" class="btn btn-outline-secondary">Cadastrar Novo</button></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DtCad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuantEstoque)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DtCad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuantEstoque)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.ProdutoID"><button type="button" class="btn btn-primary"><i class="bi bi-pencil"></i> Editar</button></a>|
                    <a asp-action="Details" asp-route-id="@item.ProdutoID"><button type="button" class="btn btn-secondary"><i class="bi bi-card-list"></i>Detalhes</button></a>|
                    <a asp-action="Delete" asp-route-id="@item.ProdutoID"><button type="button" class="btn btn-danger"><i class="bi bi-trash3"></i>Excluir</button></a>
            </td>
        </tr>
}
    </tbody>
</table>
