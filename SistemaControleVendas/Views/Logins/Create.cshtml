@model SistemaControleVendas.Models.Login

@{
    ViewData["Title"] = "Create";
}

<h1>Login</h1>

<h4></h4>
<hr />
<div class="container">
    <div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LoginEmail" class="control-label"></label>
                <input asp-for="LoginEmail" class="form-control" />
                <span asp-validation-for="LoginEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NivelAcesso" class="control-label"></label>
                <input asp-for="NivelAcesso" class="form-control" />
                <span asp-validation-for="NivelAcesso" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="Senha" for="inputPassword5" class="form-label"></label>
                    <input asp-for="Senha" type="senha" class="form-control" aria-describedby="passwordHelpBlock" />
                    <div id="passwordHelpBlock" class="form-text">
                    A senha deve ter de 6 a 10 caracteres, contendo letras e números, não deve conter espaços, caracteres especiais e emojis.
                    </div>
                    <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="dropdown-divider"></div>
            <div class="form-group">
                <input type="submit" value="Entrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
