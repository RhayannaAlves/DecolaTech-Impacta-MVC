@model SistemaControleVendas.Models.Cliente

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastrar Cliente</h1>

<h4></h4>
<hr/>
<div class="container">
    <form asp-action="Create" class="row g-3">
            <div class="col-md-8">
            <label asp-for="Nome" class="form-label">Nome</label>
            <input asp-for="Nome" class="form-control" id="Nome">
            <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="col-md-4">
            <label asp-for="DtCad" class="form-label">Data Cadastro</label>
            <input asp-for="DtCad" class="form-control" id="DtCad">
            <span asp-validation-for="DtCad" class="text-danger"></span>
            </div>
            <div class="col-6">
            <label asp-for="Endereco" class="form-label">Endereço</label>
            <input asp-for="Endereco" class="form-control" id="Endereco">
            <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>
            <div class="col-2">
            <label asp-for="Numero" class="form-label">Número</label>
            <input asp-for="Numero" class="form-control" id="Numero">
            <span asp-validation-for="Numero" class="text-danger"></span>
            </div>
            <div class="col-md-4">
            <label asp-for="Complemento" class="form-label">Complemento</label>
            <input asp-for="Complemento" class="form-control" id="Complemento">
            <span asp-validation-for="Complemento" class="text-danger"></span>
            </div>
            <div class="col-md-3">
            <label asp-for="Bairro" class="form-label">Bairro</label>
            <input asp-for="Bairro" class="form-control" id="Bairro">
            <span asp-validation-for="Bairro" class="text-danger"></span>
            </div>
            <div class="col-md-3">
            <label asp-for="Cidade" class="form-label">Cidade</label>
            <input asp-for="Cidade" class="form-control" id="Cidade">
            <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>
            <div class="col-3">
            <label asp-for="Estado" class="form-label">Estado</label>
            <input asp-for="Estado" class="form-control" id="Estado">
            <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="col-3">
            <label asp-for="Telefone" class="form-label">Telefone</label>
            <input asp-for="Telefone" class="form-control" id="Telefone">
            <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="col-7">
            <label asp-for="Email" class="form-label">E-mail</label>
            <input asp-for="Email" class="form-control" id="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="col-3">
            <label asp-for="CPF" class="form-label">CPF</label>
            <input asp-for="CPF" class="form-control" id="CPF">
            <span asp-validation-for="CPF" class="text-danger"></span>
            </div>
            <div class="col-2">
            <label asp-for="NivelAcesso" class="form-label">Nível de Acesso</label>
            <input asp-for="NivelAcesso" class="form-control" id="NivelAcesso">
            <span asp-validation-for="NivelAcesso" class="text-danger"></span>
            </div>

            <div class="form-group">
            <input type="submit" value="Cadastrar" class="btn btn-primary"</
            </div>          
        </form>
    </div>
<div> 
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
