@model SistemaControleVendas.Models.Funcionario

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastrar Funcionário</h1>

<h4></h4>
<hr />
<div class="container">
    <form asp-action="Create" class="row g-3">
        <div class="col-md-8">
            <label asp-for="Nome" class="form-label">Nome</label>
            <input asp-for="Nome" class="form-control" id="Nome">
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="DtCad" class="form-label">Data Cadastro</label>
            <input asp-for="DtCad" class="form-control" id="DtCad">
            <span asp-validation-for="DtCad" class="text-danger"></span>
        </div>
        <div class="col-8">
            <label asp-for="Email" class="form-label">E-mail</label>
            <input asp-for="Email" class="form-control" id="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="col-4">
            <label asp-for="CPF" class="form-label">CPF</label>
            <input asp-for="CPF" class="form-control" id="CPF">
            <span asp-validation-for="CPF" class="text-danger"></span>
        </div>
        <div class="col-6">
            <label asp-for="Setor" class="form-label">Setor</label>
            <input asp-for="Setor" class="form-control" id="Setor">
            <span asp-validation-for="Setor" class="text-danger"></span>
        </div>
        <div class="col-6">
            <label asp-for="NivelAcesso" class="form-label">Nivel de Acesso</label>
            <input asp-for="NivelAcesso" class="form-control" id="NivelAcesso">
            <span asp-validation-for="CPF" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Cadastrar" class="btn btn-primary"</
        </div>
    </form>
</div>
<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

